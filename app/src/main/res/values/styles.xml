<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_dog" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_dog</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dog</item>
        <item name="colorAccent">@color/colorAccent_dog</item>
        <item name="windowNoTitle">true</item>
