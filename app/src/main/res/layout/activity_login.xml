<!--登录界面布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/launch_background"
    tools:context=".ui.login.LoginActivity">

    <RelativeLayout
        android:id="@+id/login_rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/dp10" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_left" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/login_after_anim"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/main_title"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_after_anim"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/login_title1"
                android:textColor="#ffffff"
                android:textSize="26sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/login_title2"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <include
                android:id="@+id/input_layout"
                layout="@layout/input_layout"
                android:layout_width="match_parent"
                android:layout_height="170dp" />

            <include
                android:id="@+id/layout_progress"
                layout="@layout/layout_progress"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="130dp"
                android:visibility="gone" />

            <include
                android:id="@+id/layout_success"
                layout="@layout/layout_success"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="130dp"
                android:visibility="gone" />
            <include
                android:id="@+id/layout_failed"
                layout="@layout/layout_failed"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="130dip"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/input_layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_password"
                    android:textColor="#ffffff"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/regist_now"
                    android:textColor="#ffffff" />
            </LinearLayout>
            <TextView
                android:id="@+id/main_btn_login"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_below="@+id/input_layout"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:text="@string/login_button_text"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/login_icon"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:src="@drawable/ic_icon"
        android:layout_centerInParent="true"/>
</RelativeLayout>
 