<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/item_theme_comment_icon"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp20">

                <TextView
                    android:id="@+id/item_theme_comment_name"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="用户名" />

                <TextView
                    android:id="@+id/item_theme_comment_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1楼" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp20">

                <LinearLayout
                    android:id="@+id/item_theme_comment_ll_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp20"
                    android:background="@drawable/age_sex_selector"
                    android:paddingEnd="2dp"
                    android:paddingStart="-1dp">

                    <ImageView
                        android:id="@+id/item_theme_comment_sex"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_age_male" />

                    <TextView
                        android:id="@+id/item_theme_comment_age"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="-1dp"
                        android:text="22"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_theme_comment_time"
                    android:textSize="@dimen/sp12"
                    android:gravity="end|center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="昨天 22:54" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_theme_comment_comment"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/dp10"
        android:text="棕色脂肪( BROWN FAT)是负责分解引发肥胖的白色脂肪人体组织，将其转化成二氧化碳"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>